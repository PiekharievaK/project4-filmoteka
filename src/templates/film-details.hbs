<div class="modal-details" id="{{id}}">
  
    <div class="modal-details_image-box">
        {{#if poster_path}}
        <img class="modal-details_image" src="https://www.themoviedb.org/t/p/w500{{poster_path}}"
            onerror="this.onerror=null;this.src='https://subscribenow.com.au/time/asia/Solo/Content/Images/noCover.gif'"
            alt="{{title}}" title="{{title}}" />
        {{/if}}
        {{#unless poster_path}}
        <img class="image" src="https://upload.wikimedia.org/wikipedia/commons/c/c2/No_image_poster.png"
            alt="film photo">
        {{/unless}}
    </div>
      
      <div class="movie-details-data">
        <h2 class="movie-details-data_title">{{title}}</h2>
        <table class="movie-details-data_table">
          <tr>
            <td class="movie-details-data-left">Vote/Votes</td>
            <td class="movie-details-data-right"><span class="movie-details-accent">{{vote_average}}</span> / <span>{{vote_count}}</span></td>
          </tr>
          <tr>
            <td class="movie-details-data-left">Popularity</td>
            <td class="movie-details-data-right">{{popularity}}</td>
          </tr>
          <tr>
            <td class="movie-details-data-left">Original Title</td>
            <td class="movie-details-data-right">{{original_title}}</td>
          </tr>
          <tr>
            <td class="movie-details-data-left">Genre</td>
           
            <td class="movie-details-data-right"
             
                        {{#each genre_name}}
                        <span>{{this}}</span>
                        {{/each}}  </td>
          </tr>
        </table>
        <p class="movie-details-data_description-title">ABOUT</p>
        <p class="movie-details-data_description">
       {{overview}}
        </p>
        <div class="modal-details_btn-box">
      <button class="modal-details_watched-button modal-details_btn"><span>ADD TO</span> WATCHED</button>
      <button class="modal-details_queue-button modal-details_btn"><span>ADD TO</span> QUEUE</button>
        </div>
      
      </div>
      
    </div>
